{
  "name": "@voxpelli/renovate-config",
  "description": "Personal preset package for Renovate",
  "version": "1.5.0",
  "license": "MIT",
  "author": "Pelle Wessman <pelle@kodfabrik.se> (http://kodfabrik.se/)",
  "homepage": "https://github.com/voxpelli/renovate-config-voxpelli",
  "repository": {
    "type": "git",
    "url": "git://github.com/voxpelli/renovate-config-voxpelli.git"
  },
  "bugs": {
    "url": "https://github.com/voxpelli/renovate-config-voxpelli/issues"
  },
  "renovate-config": {
    "groupLinters": {
      "description": "Group all major and non-major linter package updates together respectively",
      "packageRules": [
        {
          "extends": "packages:linters",
          "packagePatterns": [
            "eslint"
          ],
          "packageNames": [
            "dependency-check",
            "detective-cjs",
            "installed-check"
          ],
          "major": {
            "groupName": "linter-majors"
          },
          "minor": {
            "groupName": "linters",
            "automerge": true
          }
        }
      ]
    },
    "groupTests": {
      "description": "Group all non-major test package updates together",
      "packageRules": [
        {
          "extends": "packages:test",
          "packageNames": [
            "concurrently",
            "husky",
            "nodemon"
          ],
          "major": {
            "groupName": "tests-major"
          },
          "minor": {
            "groupName": "tests",
            "automerge": true
          }
        }
      ]
    },
    "unitGroup": {
      "extends": [
        "group:test"
      ]
    },
    "libDefault": {
      "extends": [
        "@voxpelli"
      ]
    },
    "appDefault": {
      "extends": [
        "@voxpelli"
      ],
      "lockFileMaintenance": {
        "enabled": true,
        "schedule": "before 3am on Saturday"
      }
    },
    "default": {
      "extends": [
        "config:js-lib",
        "@voxpelli:groupLinters",
        "@voxpelli:groupTests",
        ":prHourlyLimit4",
        ":prConcurrentLimit10"
      ],
      "timezone": "Europe/Stockholm",
      "schedule": "before 5am on Saturday",
      "assignees": [
        "voxpelli"
      ],
      "ignoreDeps": [
        "concurrently",
        "eslint",
        "eslint-plugin-node"
      ]
    }
  }
}

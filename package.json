{
  "name": "@voxpelli/renovate-config",
  "description": "Personal preset package for Renovate",
  "version": "1.0.2",
  "license": "MIT",
  "author": "Pelle Wessman <pelle@kodfabrik.se> (http://kodfabrik.se/)",
  "homepage": "https://github.com/voxpelli/renovate-config-voxpelli",
  "repository": {
    "type": "git",
    "url": "git://github.com/voxpelli/renovate-config-voxpelli.git"
  },
  "bugs": {
    "url": "https://github.com/voxpelli/renovate-config-voxpelli/issues"
  },
  "renovate-config": {
    "jsUnit": {
      "description": "Unit test related packages for javascript",
      "packageNames": [
        "coveralls",
        "istanbul",
        "mocha",
        "mock-fs",
        "nock",
        "nyc",
        "proxyquire",
        "supertest"
      ],
      "packagePatterns": [
        "^chai",
        "^sinon"
      ]
    },
    "unit": {
      "description": "All unit test related packages",
      "extends": [
        "@voxpelli:jsUnit"
      ]
    },
    "unitGroup": {
      "description": "Group various unit test packages together",
      "packageRules": [
        {
          "extends": "@voxpelli:unit",
          "groupName": "unit test packages"
        }
      ]
    },
    "versions": {
      "description": "My own preference of version handling",
      "packageRules": [
        {
          "packagePatterns": [
            "*"
          ],
          "rangeStrategy": "replace"
        },
        {
          "packagePatterns": [
            "devDependencies"
          ],
          "rangeStrategy": "pin"
        },
        {
          "depTypeList": [
            "peerDependencies"
          ],
          "rangeStrategy": "widen"
        }
    ]
    }
  }
}
